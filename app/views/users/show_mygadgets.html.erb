<div class="container">
  <div class="user-info-and-link-profile">
    <div class="icon-image-lg">
      <%= image_tag @user.avatar %>
      <p><%= @user.name %>さん</p>
    </div>
    <div class="edit-profile-btn-container">
      <%= link_to "プロフィールを編集", edit_user_profile_path(@user.id), class: "btn edit-profile-btn" %>
    </div>
  </div>

  <div class="inroduction">
    <p><%= safe_join(@user.introduction.split("\n"),tag(:br)) %></p>
  </div>

  <div class="mypage-link-lists">
    <p class="current-page">My ガジェット</p>
    <p class="link-page"><%= link_to "お気に入り", user_favorites_path(@user.id) %></p>
  </div>

  <div class="mygadget-lists">
    <% @gadgets.group_by(&:category).each do |category, gadgets| %>
      <div class="category-container">
        <h4><%= category %></h4>
        <% gadgets.each do |gadget| %>
          <div class="mygadget-detail">
            <div class="gadget-image" >
              <%= image_tag gadget.image %>
            </div>
            <div class="gadget-name">
              <h5><%= gadget.name %></h5>
            </div>
            <%# いいねとコメント %>
            <div class="likes-and-comments-container">
              <div class="likes-and-comments" id="likes-and-comments-<%= gadget.id %>">
                <%= render partial: 'shared/likes_and_comments', locals: {gadget: gadget} %>
                <%= link_to gadget_comments_path(gadget.id), class: "ms-5" do %>
                  <i class="fa-regular fa-message fs-2" style="color: #393e46;"></i> <span class="fs-2 ms-2"><%= gadget.comments.count %></span>
                <% end %>
              </div>
            </div>
            <div class="detail-link-container">
              <%= link_to "＞ 投稿詳細へ", gadget_path(gadget), class: "btn detail-link" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if current_user == @user %>
    <div class="gadget-new-registration-btn-container">
      <%= link_to "＋新規登録", new_gadget_path, class: "btn gadget-new-registration-btn" %>
    </div>
  <% end %>
</div>

