<div class="title">
  <div class="title-wrapper">
    <div class="app-name">
      <h1>OshiGadge</h1>
      <h4>−推しガジェ−</h4>
    </div>
    <div class="description">
      <p>自分の推しのガジェットを共有しよう</P>
      <p>あの人が使っている推しガジェットをチェックしよう</p>
    </div>
  </div>
</div>
<% unless user_signed_in? %>
  <div class="registration-and-login">
    <div class="registration-button">
      <%= link_to new_user_registration_path do %>
        <button type="button" class="btn registration">新規登録</button>
      <% end %>
    </div>
    <div class="login-button">
      <%= link_to new_user_session_path do %>
        <button type="button" class="btn login">ログイン</button>
      <% end %>
      <%= link_to users_guest_sign_in_path do %>
        <button type="button" class="btn guest-login">ゲストログイン</button>
      <% end %>
    </div>
  </div>
<% end %>
<div class="new-posts">
  <div class="new-posts-title">
    <h2>新着投稿一覧</h2>
    <%= link_to "新着投稿一覧はこちら", gadgets_path %>
  </div>
  <div class="post-list">
    <% @gadgets.each do |gadget| %>
      <div class="post">
        <div class="post-container">
          <div class="content">
            <%= link_to user_mygadgets_path(gadget.user.id) do %>
              <div class="user-info">
                <div class="icon-image">
                  <%= image_tag gadget.user.avatar %>
                </div>
                <div class="user-content">
                  <p class="user-name"><%= gadget.user.name %></p>
                  <p><%= gadget.created_at %></p>
                </div>
              </div>
            <% end %>
            <p class="gadget-name"><%= gadget.name %></p>
            <p class="gadget-category"><%= gadget.category %></p>
          </div>
          <div class="image">
            <%= image_tag gadget.image, size: "125x110" %>
          </div>
        </div>
        <div class="post-button">
          <P><%= link_to "＞ 投稿詳細へ", gadget_path(gadget), class: "btn" %></P>
        </div>
      </div>
    <% end %>
  </div>
  <div class="post-list-link">
    <P><%= link_to "新着投稿一覧はこちら", gadgets_path %></P>
  </div>
</div>
<div class="users-index">
  <div class="users-index-title">
    <h2>ユーザー一覧</h2>
    <%= link_to "ユーザー一覧はこちら", users_path %>
  </div>
  <div class="users-list">
    <% @users.each do |user| %>
      <div class="user-container">
        <%= link_to user_mygadgets_path(user.id) do %>
          <div class="user-info">
            <div class="icon-image">
              <%= image_tag user.avatar %>
            </div>
            <div class="user-content">
              <p class="user-name"><%= user.name %></p>
            </div>
          </div>
        <% end %>
        <div class="gadget-image">
          <% user.gadgets.each do |gadget| %>
            <%= link_to gadget_path(gadget.id) do %>
              <%= image_tag gadget.image, size: "65x65" %>
            <% end %>
          <% end %>
        </div>
        <div class="user-button">
          <P><%= link_to "＞ ユーザー詳細へ", users_path(user.id), class: "btn" %></P>
        </div>
      </div>
    <% end %>
  </div>
  <div class="user-list-link">
    <P><%= link_to "ユーザー一覧はこちら", users_path %></P>
  </div>
</div>
