<h2>ガジェットを登録</h2>

<%= form_with model: @gadget, url: gadgets_path, local: true do |f| %>
  <div class="field">
    <%= f.label :gadget_name, class: "form-label" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :category, class: "form-label" %><br />
    <%= f.text_field :category, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :gadget_image, class: "form-label" %><br />
    <%= f.file_field :image, class: "form-control", accept: 'image/jpeg, image/jpg, image/png, image/bmp' %>
  </div>
  <div class="field">
    <%= f.label :start_date, class: "form-label" %><br />
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :feature, class: "form-label" %><br />
    <%= f.text_area :feature, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :point, class: "form-label" %><br />
    <%= f.text_area :point, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :reason, class: "form-label" %><br />
    <%= f.text_area :reason, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :usage, class: "form-label" %><br />
    <%= f.text_area :usage, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= link_to '戻る', user_mygadgets_path(current_user.id) %>
